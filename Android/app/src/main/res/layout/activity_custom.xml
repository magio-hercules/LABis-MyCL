<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contents.CustomActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Div1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="타이틀"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:ems="12"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="우리 생애 최고의 순간" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textOriginal"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="글로벌타이틀"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editOriginal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:ems="12"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="Forever The Moment" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textGenre"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="장르"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editGenre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:ems="12"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSeason"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="시즌"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editSeason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:ems="12"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textChapter"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="챕터"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editChapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:ems="12"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSummary"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="요약"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editSummary"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="0.3"
                android:ems="12"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="@android:integer/config_longAnimTime"
                android:text="어저고 저쩌고" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">
            <Switch
                android:id="@+id/switchTheater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.7"
                android:textColor="#737373"
                android:switchMinWidth="60dp"
                android:text="극장판"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Div8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#FFC000"
            android:text="저장"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>