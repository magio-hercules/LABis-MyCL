<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context=".contents.CustomActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/HeaderDiv"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/DivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/textThum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="썸네일"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_gravity="center"
                    android:alpha="0.6"
                    android:background="@mipmap/ic_default_thum"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DivGenre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:padding="10dp">
                <TextView
                    android:id="@+id/textGenre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="장르"
                    android:textSize="11sp" />

                <Spinner
                    android:id="@+id/comboGenre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"
                    android:gravity="right" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Div1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_marginTop="-1dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="타이틀"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@color/cardview_light_background"
                android:gravity="bottom|right"
                android:inputType="textPersonName"
                android:text="우리 생애 최고의 순간"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textOriginal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="글로벌타이틀"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editOriginal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@color/cardview_light_background"
                android:gravity="bottom|right"
                android:inputType="textPersonName"
                android:text="Forever The Moment"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/OptionDiv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Div4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textSeason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="시즌"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editSeason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/cardview_light_background"
                    android:gravity="bottom|right"
                    android:inputType="numberDecimal"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Div5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textChapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="시작챕터"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editChapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/cardview_light_background"
                    android:gravity="bottom|right"
                    android:inputType="numberDecimal"
                    android:text="10"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Div6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textTheater"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="0.7"
                android:text="극장판"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switchTheater"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="-2dp"
                android:layout_weight="0.7"
                android:switchMinWidth="60dp"
                android:track="@drawable/bg_switch_track" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Div7"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textSummary"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="0.7"
                android:text="요약"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editSummary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@color/cardview_light_background"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="@android:integer/config_longAnimTime"
                android:text="어저고 저쩌고"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Div8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#FFC000"
            android:text="저장"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>