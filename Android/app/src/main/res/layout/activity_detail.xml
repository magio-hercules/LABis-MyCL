<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context=".contents.DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="0.6"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detail_appbar"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chapter_edit_div"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_minus_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:background="@mipmap/ic_minus_btn" />
                <TextView
                    android:id="@+id/detail_chapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="16 화"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/detail_plus_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="50dp"
                    android:background="@mipmap/ic_plus_btn" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/detail_header_div"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:text="타이틀"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.22"
                    android:gravity="bottom"
                    android:text="어벤져스: 인피니티 워"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/detail_org_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="(Avengers: Infinity War, 2018)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_favorite_div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/textGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="즐겨찾기"
                    android:textSize="11sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="0.7"
                        android:background="@mipmap/ic_favorite2_on"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/OptionDiv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/Div4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/textSeason"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="시즌"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/editSeason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="bottom|right"
                    android:text="3"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Div6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/textTheater"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_weight="0.7"
                    android:text="극장판"
                    android:textSize="12sp" />
                <Switch
                    android:id="@+id/switchTheater"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="-2dp"
                    android:layout_weight="0.7"
                    android:switchMinWidth="60dp"
                    android:track="@drawable/bg_switch_track" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Div7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/textSummary"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="0.7"
                android:text="요약"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/editSummary"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="새로운 조합을 이룬 어벤져스,
 역대 최강 빌런 타노스에 맞서 세계의 운명이 걸린
 인피니티 스톤을 향한 무한 대결이 펼쳐진다!"
                android:gravity="top"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Div8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#FFC000"
            android:textStyle="bold"
            android:text="수정"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>