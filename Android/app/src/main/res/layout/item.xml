<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    card_view:cardElevation="1dp"
    card_view:contentPadding="0dp"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/firstDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gentext"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:gravity="center_vertical|center_horizontal"
                android:text="영화"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@android:color/background_dark"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/thirdDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right|center_vertical"
                android:text="시즌12"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/subThirdDiv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="bottom|right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ConMinusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="-"
                    android:textColor="#335EA8"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/index"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ConAddBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="+"
                    android:textColor="#DB1E89"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>